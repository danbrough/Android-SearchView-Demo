<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="SearchResultTitle" parent="@style/TextAppearance.AppCompat.SearchResult.Title">
    <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
  </style>

  <style name="SearchResultSubtitle" parent="@style/TextAppearance.AppCompat.SearchResult.Subtitle">
    <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
  </style>

  <style name="Theme.AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>

    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="textAppearanceSearchResultTitle">@style/SearchResultTitle</item>
    <item name="textAppearanceSearchResultSubtitle">@style/SearchResultSubtitle</item>
    <!--
         colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets
    -->
    <!-- <item name="colorAccent">@color/yellow</item> -->
    <!--
         You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal.
    -->
    <!-- <item name="colorControlNormal">@color/yellow</item> -->
    <!-- <item name="colorControlActivated">@color/white</item> -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="@style/Theme.AppTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

  </style>

</resources>